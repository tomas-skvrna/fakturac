{% extends 'base-login.html.twig' %}

{% block title %}Přihlášení{% endblock %}

{% block loginform %}
    <div class="row login-form d-flex align-items-center">
        <div class="offset-md-3 offset-lg-4 col-md-6 col-lg-4 text-center">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <h1 class="h3 mb-3 text-center font-weight-normal">Fakturáč</h1>
                <h2 class="h4 mb-3 text-center font-weight-normal">Přihlášení do aplikace</h2>
                <label for="inputEmail" class="sr-only">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class=" form-control mb-3 rounded-pill"
                       placeholder="Email" required autofocus>
                <label for="inputPassword" class="sr-only">Heslo</label>
                <input type="password" name="password" id="inputPassword" class="form-control mb-3 rounded-pill" placeholder="Heslo"
                       required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <button class="btn btn-lg btn-primary mb-3 rounded-pill" type="submit">
                    Přihlásit se
                </button>
            </form>
            <a href="{{ path('app_register') }}" class="btn btn-default bg-light rounded-pill float-left">Registrovat se</a>
            <a href="{{ path('app_forgotten_password') }}" class="btn btn-default rounded-pill float-right">Zapomenuté heslo</a>
            <div class="clearfix"></div>
            <hr>
            <p>&copy; 2019 Tomáš Škvrna</p>
        </div>
    </div>
{% endblock %}
